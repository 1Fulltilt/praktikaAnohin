<Window x:Class="praktikaAnohin.Pages.ADDOhranaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktikaAnohin.Pages"
        mc:Ignorable="d"
        Title="ADDOhranaWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="ID Сторожа" Margin="5" Width="450" Height="25"/>
            <TextBox Text="{Binding id_storozha}" Margin="5" Height="25"/>
            <TextBlock Text="ФИО" Margin="5"/>
            <TextBox Text="{Binding FIO}" Height="25"/>
            <TextBlock Text="Телефон" Margin="5"/>
            <TextBox Text="{Binding Telefon}" Height="25"/>
            <TextBlock Text="Адрес" Margin="5"/>
            <TextBox Text="{Binding Adres}" Height="25"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button x:Name="DobavitBtn" Content="Добавить" Margin="5" Height="25" Width="150" Click="DobavitBtn_Click"/>
            <Button x:Name="ExitBtn" Content="Выход" Margin="5" Height="25" Width="150"/>
        </StackPanel>

    </Grid>
</Window>
