<Page x:Class="praktikaAnohin.Pages.ADDPrihod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktikaAnohin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ADDPrihod">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="Запись" Margin="5" Width="450" Height="25"/>
            <TextBox Text="{Binding id_zapisi}" Margin="5" Height="25"/>
            <TextBlock Text="Дата" Margin="5"/>
            <TextBox Text="{Binding data}" Height="25"/>
            <TextBlock Text="Время" Margin="5"/>
            <TextBox Text="{Binding time}" Height="25"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button x:Name="DobavitBtn" Content="Добавить" Margin="5" Height="25" Width="150" Click="DobavitBtn_Click_1"/>
            <Button x:Name="ExitBtn" Content="Выход" Margin="5" Height="25" Width="150" Click="ExitBtn_Click"/>
        </StackPanel>

    </Grid>
</Page>
