<Page x:Class="praktikaAnohin.Pages.ADDSpisAvto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktikaAnohin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ADDSpisAvto">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="ID Авто" Margin="5" Width="450" Height="25"/>
            <TextBox Text="{Binding id_avto}" Margin="5" Height="25"/>
            <TextBlock Text="Марка авто" Margin="5"/>
            <TextBox Text="{Binding marka_avto}" Height="25"/>
            <TextBlock Text="Модель авто" Margin="5"/>
            <TextBox Text="{Binding model_avto}" Height="25"/>
            <TextBlock Text="Гос. знак" Margin="5"/>
            <TextBox Text="{Binding gos_znak}" Height="25"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button x:Name="DobavitBtn" Content="Добавить" Margin="5" Height="25" Width="150" Click="DobavitBtn_Click"/>
            <Button x:Name="ExitBtn" Content="Выход" Margin="5" Height="25" Width="150"/>
        </StackPanel>

    </Grid>
</Page>
