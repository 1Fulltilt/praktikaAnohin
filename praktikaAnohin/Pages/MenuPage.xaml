<Page x:Class="praktikaAnohin.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktikaAnohin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Frame x:Name="Frame1" NavigationUIVisibility="Hidden"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ohranaBtn" Content="Охрана" Width="150" Height="40" Margin="5" Click="ohranaBtn_Click"/>
            <Button x:Name="PrihUhAvtoBtn" Content="Приход и уход Авто" Width="150" Height="40" Margin="5" Click="PrihUhAvtoBtn_Click_1"/>
            <Button x:Name="SpisVladelecaBtn" Content="Список владельцев" Width="150" Height="40" Margin="5" Click="SpisVladelecaBtn_Click"/>
            <Button x:Name="spisAvtoBtn" Content="Список авто" Width="150" Height="40" Margin="5" Click="spisAvtoBtn_Click"/>
            <Button x:Name="otchetBtn" Content="Отчет" Width="150" Height="40" Margin="5" Click="otchetBtn_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="VihodBtn" Content="Выход" Width="150" Height="40" Margin="5" Click="VihodBtn_Click"/>

        </StackPanel>

    </Grid>
</Page>
